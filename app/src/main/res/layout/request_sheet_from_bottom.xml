<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_count_down"
    xmlns:app="http://schemas.android.com/apk/res-auto">





    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <android.support.v4.widget.NestedScrollView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <LinearLayout
                    android:background="@drawable/background_white_layout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_weight="4"
                        android:id="@+id/request_image_user"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/circle_black"
                        android:padding="3dp"
                        android:src="@drawable/default_avatar" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/request_name_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:text="name"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textDirection="ltr"
                            android:textSize="25dp"
                            android:textStyle="bold" />



                    </LinearLayout>



                </LinearLayout>



                <View
                    android:background="@android:color/darker_gray"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    >

                </View>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/XML_CP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/background_white_layout"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/XML_GG"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/abdo_f"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="رحلتك الى"
                                        android:textColor="@android:color/black"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/request_text_to"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center"
                                        android:maxLines="2"
                                        android:padding="10dp"
                                        android:text="لا يوجد" />

                                </LinearLayout>


                            </LinearLayout>


                            <Space
                                android:layout_width="6dp"
                                android:layout_height="wrap_content" />


                            <LinearLayout
                                android:id="@+id/XML_CO"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/background_white_layout"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/XML_EE"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/abdo_f"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="رحلتك من "
                                        android:textColor="@android:color/black"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/request_text_from"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:maxLines="2"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:text="لا يوجد" />

                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/XML_CQ"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/background_white_layout"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@drawable/background_white_layout"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/XML_ii"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/abdo_f"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="المسافة"
                                        android:textColor="@android:color/black"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/request_text_destance"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:maxLines="2"
                                        android:text="لا يوجد" />
                                </LinearLayout>

                            </LinearLayout>







                            <Space
                                android:layout_width="6dp"
                                android:layout_height="wrap_content" />


                            <LinearLayout
                                android:id="@+id/XML_CR"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/background_white_layout"
                                android:orientation="vertical">



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@drawable/background_white_layout"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/XML_KK"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/abdo_f"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="سعر الرحلة"
                                        android:textColor="@android:color/black"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/request_text_price"
                                        android:maxLines="2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:text="لا يوجد" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@drawable/background_white_layout"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/abdo_f"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="نوع الخدمة"
                                        android:textColor="@android:color/black"
                                        android:textSize="24sp" />

                                    <TextView
                                        android:id="@+id/request_kind_request"
                                        android:maxLines="2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:text="لا يوجد" />

                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>



                    <View
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginEnd="70dp"
                        android:layout_marginStart="70dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        >

                    </View>

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/request_view_accept_btn"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:background="@drawable/shape_button_green"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:padding="5dp"
                            android:text="قبول"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/request_view_delete_btn"
                        android:background="@drawable/shape_button_red"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:padding="5dp"
                            android:text="رفض"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>





</android.support.design.widget.CoordinatorLayout>


